{% extends "layout.njk" %}

    {% block head%}
         <title> Sobre - {{ about.name }}</title>
    {% endblock %}

{% block content %}

<!-- a extensao vai para o layout levando esse conteudo  -->
<div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <p>{{ about.description}}
</div>


<div id="container">
    {% for footer in about.footers %}
        <strong>  <img src="{{footer.imgsrc}}"> {{footer.text}} <strong> 
    {% endfor %}

</div>


{% endblock %}

